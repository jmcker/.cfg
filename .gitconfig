[user]
    useConfigOnly = true
    name = (None)
    email = (None)
[core]
    autocrlf = input
    editor = "vim"
	excludesfile = ~/.gitignore_global
    hooksPath = ~/.git-templates/hooks
	ignorecase = false
[credential]
    helper = cache
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[init] # Will disable committing with the global credentials
    templateDir = ~/.git-templates

